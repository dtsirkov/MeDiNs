<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/medins_schema</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
		<property name="use_sql_comments">true</property>
        <mapping resource="database/pojo/CaseInfo.hbm.xml" />
        <mapping resource="database/pojo/Medicaments.hbm.xml" />
        <mapping resource="database/pojo/MedicalReport.hbm.xml" />
        <mapping resource="database/pojo/Persons.hbm.xml" />
        <mapping resource="database/pojo/Users.hbm.xml" />
        <mapping resource="database/pojo/Diagnosis.hbm.xml" />
        <mapping resource="database/pojo/Organizations.hbm.xml" />
        <mapping resource="database/pojo/TouristVisit.hbm.xml" />
        <mapping resource="database/pojo/Documentation.hbm.xml" />
        <mapping resource="database/pojo/EnumerationLabels.hbm.xml" />
        <mapping resource="database/pojo/EnumerationTypes.hbm.xml" />
        <mapping resource="database/pojo/Invoices.hbm.xml" />
        <mapping resource="database/pojo/Services.hbm.xml" />
        <mapping resource="database/pojo/Policies.hbm.xml" />
        <mapping resource="database/pojo/Enumerations.hbm.xml" />
        <mapping resource="database/pojo/Country.hbm.xml" />
        <mapping resource="database/pojo/Treatments.hbm.xml" />
        <mapping resource="database/pojo/Contacts.hbm.xml" />
    </session-factory>
</hibernate-configuration>
